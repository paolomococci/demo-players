<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ScoreButtons" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:tint">@color/colorPrimary</item>
    </style>

    <style name="IncreaseButtons" parent="ScoreButtons">
        <item name="android:src">@drawable/ic_increase</item>
        <item name="android:contentDescription">
            @string/increase_description
        </item>
    </style>

    <style name="DecreaseButtons" parent="ScoreButtons">
        <item name="android:src">@drawable/ic_decrease</item>
        <item name="android:contentDescription">
            @string/decrease_description
        </item>
    </style>

    <style name="ScoreText">
        <item name="android:textAppearance">
            @style/TextAppearance.AppCompat.Display3
        </item>
    </style>

    <style name="PlayerText">
        <item name="android:textAppearance">
            @style/TextAppearance.AppCompat.Display1
        </item>
    </style>

</resources>
